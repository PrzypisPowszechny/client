{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "arrow-return-shorthand": true,
    "max-classes-per-file": [
      true,
      2
    ],
    "member-access": [
      true, "no-public"
    ],
    "no-console": false,
    "no-unnecessary-callback-wrapper": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "always"
      }
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ]
  }
}
