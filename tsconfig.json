{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "module": "es6",
    "target": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
         "*",
         "src/*"
      ]
    }
  },
  "include": [
    "./@types/custom.d.ts",
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
