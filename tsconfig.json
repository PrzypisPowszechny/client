{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "alwaysStrict": true,
    "module": "es6",
    "target": "es2015",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es7",
      "es2018.promise",
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
         "*",
         "src/*"
      ]
    },
    "noImplicitThis": true,
    "noUnusedLocals": false
  },
  "include": [
    "./@types/custom.d.ts",
    "./src/**/*"
  ]
}
